@{
    ViewData["Title"] = "Review host";
}

@model CreateReviewViewModel


<head>
    <link href="~/css/form.css" rel="stylesheet" />
</head>

<link rel="stylesheet" href="/css/form.css">

<div>

    <div asp-validation-summary="All"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card my-5">

                    <form asp-controller="Review" asp-action="CreateReview" class="card-body cardbody-color p-lg-5" method="post">
                        <h2>@ViewData["Title"]</h2>
                        <div class="mb-3">
                            <label asp-for="ReviewText" class="control-label">Review</label>
                            <span asp-validation-for="ReviewText" class="text-danger"></span>
                            <input asp-for="ReviewText" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rating" class="control-label">Rating (1/5)</label>
                            <input type="number" asp-for="Rating" class="form-control" min="1" max="5">
                        </div>

                        <div class="form-group row">
                            <button class="btn btn-primary col-sm-4 text-center">Add review</button>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>

</div>







