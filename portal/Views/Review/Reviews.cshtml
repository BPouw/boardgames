
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/dashboard/" />

    <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://pro.fontawesome.com/releases/v6.0.0-beta3/css/all.css" rel="stylesheet" SameSite='Strict' />

    <link rel="stylesheet" type="text/css" href="../css/reviews.css" />
</head>

<body>
    <a class="btn btn-outline-success" asp-controller="GameNight" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Back</a>

    <div class="cards">
        @if (Model == null)
        {
            <h4>No reviews yet..</h4>
        }
        else
        {

            @foreach (var r in Model)
            {
                <div class="review-card">
                    <div class="one-line">
                        <h4>@r.Review.Reviewer.Name</h4>
                        @if (r.Review.Rating == 1)
                        {
                                <div>
                                    <i class="fa-solid fa-star"></i>
                                </div>

                        }
                        @if (r.Review.Rating == 2)
                        {
                                <div>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                </div>

                        }
                        @if (r.Review.Rating == 3)
                        {
                                <div>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                </div>

                        }
                        @if (r.Review.Rating == 4)
                        {
                                <div>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>

                                </div>

                        }
                        @if (r.Review.Rating == 5)
                        {
                                <div>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>

                                </div>

                        }
                    </div>
                    <hr />
                    <p>@r.Review.ReviewText</p>

                </div>
            }
        }
    </div>


</body>

</html>