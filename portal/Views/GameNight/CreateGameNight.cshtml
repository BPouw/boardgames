@{
    ViewData["Title"] = "Add a new game night";
}


@model NewGameNightViewModel

<link rel="stylesheet" href="/css/form.css">

<div>

    <div asp-validation-summary="All"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card my-5">

                    <form class="card-body cardbody-color p-lg-5" asp-action="CreateGameNight" method="post">

                        <h2>@ViewData["Title"]</h2>

                        <div class="mb-3">
                            <label asp-for="Name">Enter the title:</label>
                            <input class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GameTime">Enter the date and time:</label>
                            <input class="form-control" asp-for="GameTime" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxPlayers">Enter the maximum amount of players:</label>
                            <input class="form-control" asp-for="MaxPlayers" />
                        </div>

                        <div class="mb-3">
                            <input type="checkbox" asp-for="AdultsOnly" />
                            <label asp-for="AdultsOnly">Adults only?</label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GameIds">What are we playing?:</label>
                            <select class="form-control" asp-for="GameIds" asp-items="@ViewBag.Games" multiple></select>
                        </div>

                        <label>Will you have food/drink to offer the following diets?:</label>

                        <div class="mb-3">
                            <input type="checkbox" asp-for="LactoseIntolerant" />
                            <label asp-for="LactoseIntolerant">Lactose intolerant</label>
                        </div>

                        <div class="mb-3">
                            <input type="checkbox" asp-for="Vegan" />
                            <label asp-for="Vegan">Vegan</label>
                        </div>

                        <div class="mb-3">
                            <input type="checkbox" asp-for="AlcoholFree" />
                            <label asp-for="AlcoholFree">Non-Alcoholic</label>
                        </div>

                        <div class="mb-3">
                            <input type="checkbox" asp-for="NutAllergy" />
                            <label asp-for="NutAllergy">Nut allergy</label>
                        </div>

                        <div class="mb-3 row">
                            <button class="btn btn-primary col-sm-4 text-center">Add game night</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>

</div>


